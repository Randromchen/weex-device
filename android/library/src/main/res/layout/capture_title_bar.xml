<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:background="@color/image_overlay_true"
    >

    <RelativeLayout
        android:id="@+id/rl_picture_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bar_grey_90"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/picture_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/picture_back" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="0.5dp"
            android:layout_height="26dp"
            android:layout_toRightOf="@id/picture_left_back"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_line"
            android:layout_centerVertical="true"
            android:drawablePadding="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:padding="6dp"
            android:text="二维码"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/picture_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="相册"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/bar_grey_90" />
    </RelativeLayout>

</LinearLayout>

